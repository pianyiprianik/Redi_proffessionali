<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTP_Verification"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView_receive_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto"
                android:lineHeight="16dp"
                android:text="If you didnâ€™t receive code, "
                android:textColor="#A7A7A7"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_number_2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="283dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_medium"
                android:lineHeight="16dp"
                android:text="Enter the 6 digit numbers sent to your email"
                android:textColor="#A7A7A7"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="193dp"
                android:layout_height="30dp"
                android:fontFamily="@font/roboto_medium"
                android:lineHeight="30dp"
                android:text="OTP Verification"
                android:textColor="#3A3A3A"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_send_otp"
                android:layout_width="342dp"
                android:layout_height="46dp"
                android:layout_marginTop="82dp"
                android:background="@drawable/for_buttons_session_2_1"
                android:fontFamily="@font/roboto_bold"
                android:lineHeight="16dp"
                android:stateListAnimator="@null"
                android:text="Set New Password"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_receive_code" />

            <TextView
                android:id="@+id/textView_resend_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:lineHeight="16dp"
                android:text="resend after 1:00"
                android:textColor="#A7A7A7"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_receive_code"
                app:layout_constraintStart_toEndOf="@+id/textView_receive_code" />

            <EditText
                android:id="@+id/editText_number_6"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="52dp"
                android:background="@drawable/for_verification"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="numberSigned"
                android:lineHeight="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/editText_number_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/for_verification"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="numberSigned"
                android:lineHeight="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/editText_number_2"
                app:layout_constraintEnd_toStartOf="@+id/editText_number_2"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/editText_number_3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/for_verification"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="numberSigned"
                android:lineHeight="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/editText_number_4"
                app:layout_constraintEnd_toStartOf="@+id/editText_number_4" />

            <EditText
                android:id="@+id/editText_number_5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/for_verification"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="numberSigned"
                android:lineHeight="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/editText_number_6"
                app:layout_constraintEnd_toStartOf="@+id/editText_number_6" />

            <EditText
                android:id="@+id/editText_number_4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/for_verification"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="numberSigned"
                android:lineHeight="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/editText_number_5"
                app:layout_constraintEnd_toStartOf="@+id/editText_number_5" />

            <EditText
                android:id="@+id/editText_number_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/for_verification"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:inputType="numberSigned"
                android:lineHeight="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/editText_number_3"
                app:layout_constraintEnd_toStartOf="@+id/editText_number_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>